  <script>
    // ====== Tiny JS: uptime, year, tracker persistence, export, add-row ======
    (function(){
      const started = '2025-08-12T00:00:00+05:30'; // launch date; adjust if needed
      const msPerDay = 24*60*60*1000;
      const days = Math.max(0, Math.floor((Date.now() - new Date(started).getTime())/msPerDay));
      document.getElementById('uptimeDays').textContent = days;
      document.getElementById('year').textContent = new Date().getFullYear();

      const storeKey = 'sy-tracker-v1';
      const $$ = (sel,root=document)=>Array.from(root.querySelectorAll(sel));

      function load(){
        try{ return JSON.parse(localStorage.getItem(storeKey)||'{}'); }
        catch{ return {}; }
      }
      function save(data){ localStorage.setItem(storeKey, JSON.stringify(data)); }

      function syncFromStore(){
        const data = load();
        $$('#taskRows input[type="checkbox"]').forEach(cb=>{ cb.checked = !!data[cb.dataset.id]; });
        $$('#taskRows [data-note]').forEach(td=>{ td.textContent = (data['note:'+td.dataset.note]||''); });
      }
      function syncToStore(){
        const data = load();
        $$('#taskRows input[type="checkbox"]').forEach(cb=>data[cb.dataset.id]=cb.checked);
        $$('#taskRows [data-note]').forEach(td=>data['note:'+td.dataset.note]=td.textContent.trim());
        save(data);
      }

      document.getElementById('taskRows').addEventListener('input', syncToStore);
      document.getElementById('taskRows').addEventListener('change', syncToStore);

      document.getElementById('exportJson').addEventListener('click', ()=>{
        const blob = new Blob([localStorage.getItem(storeKey)||'{}'], {type:'application/json'});
        const a = document.createElement('a');
        a.href = URL.createObjectURL(blob);
        a.download = 'suryansh-tracker.json';
        a.click();
        URL.revokeObjectURL(a.href);
      });

      document.getElementById('addRow').addEventListener('click', ()=>{
        const tbody = document.getElementById('taskRows');
        const id = 't'+Math.random().toString(36).slice(2,7);
        const tr = document.createElement('tr');
        tr.innerHTML = `<td contenteditable="true">New task</td>
                        <td><input type="checkbox" data-id="${id}"></td>
                        <td contenteditable="true" data-note="${id}"></td>`;
        tbody.appendChild(tr); syncToStore();
      });

      syncFromStore();
    })();
  </script>
